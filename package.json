{
    "name": "lowcss",
    "version": "0.21.0",
    "description": "A low-level functional CSS toolkit",
    "author": {
        "name": "Josemi Juanes",
        "email": "hello@josemi.xyz"
    },
    "license": "MIT",
    "homepage": "https://www.josemi.xyz/lowcss",
    "repository": "https://github.com/jmjuanes/lowcss",
    "bugs": "https://github.com/jmjuanes/lowcss/issues",
    "main": "dist/low.css",
    "style": "dist/low.css",
    "sass": "low.scss",
    "scripts": {
        "build:dev": "sass sass/main.scss low.dev.css",
        "build:css": "sass --style compressed sass/main.scss low.css",
        "postbuild:css": "postcss low.css -o low.css && csso low.css --output low.css --source-map low.css.map",
        "build:json": "sass --no-source-map sass/json.scss low.raw.json",
        "postbuild:json": "cat low.raw.json | tail -n 2 | head -n 1 | node ./scripts/json.js > low.json && rm low.raw.json",
        "prebuild:docs": "rm -rf public && mkdir public",
        "build:docs": "redocus --config redocus.config.js",
        "postbuild:docs": "cp dist/low.css public/ && cp dist/low.css.map public/ && cp node_modules/highlight.js/styles/nord.css public/highlight.css && cp assets/* public/",
        "build": "yarn bundle && yarn build:css && yarn build:json",
        "bundle": "node ./scripts/bundle.js sass/_index.scss low.scss",
        "docs": "yarn run build:docs",
        "serve": "serve ./public"
    },
    "keywords": [
        "css",
        "css-toolkit",
        "low-css",
        "functional-css",
        "css-utilities",
        "utilities",
        "css-classes"
    ],
    "files": [
        "README.md",
        "LICENSE",
        "dist",
        "low.scss"
    ],
    "devDependencies": {
        "@josemi-icons/react": "^0.3.2",
        "@mdx-js/mdx": "^2.3.0",
        "autoprefixer": "^10.4.12",
        "classnames": "^2.3.2",
        "csso-cli": "^4.0.1",
        "highlight.js": "^11.8.0",
        "postcss": "^8.4.18",
        "postcss-cli": "^10.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "redocus": "^0.1.1",
        "sass": "^1.55.0",
        "serve": "^14.2.0",
        "stattic": "^0.4.0"
    },
    "peerDependencies": {
        "sass": ">=1.23.0"
    },
    "browserslist": [
        "last 10 Chrome versions",
        "last 4 Firefox versions",
        "last 3 Safari versions",
        "not Safari 12",
        "last 4 Edge versions",
        "not Edge <= 18",
        "Firefox ESR"
    ]
}
