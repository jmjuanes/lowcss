{
    "name": "lowcss",
    "version": "0.9.0",
    "description": "A low-level functional CSS toolkit",
    "author": "Josemi Juanes <hello@josemi.xyz>",
    "license": "MIT",
    "repository": "https://github.com/jmjuanes/lowcss",
    "bugs": "https://github.com/jmjuanes/lowcss/issues",
    "main": "dist/low.css",
    "style": "dist/low.css",
    "sass": "low/_index.scss",
    "scripts": {
        "build:dev": "sass --load-path=./ main.scss dist/low.dev.css",
        "build:css": "sass --load-path=./ --style compressed main.scss dist/low.css",
        "postbuild:css": "postcss dist/low.css -o dist/low.css && csso dist/low.css --output dist/low.css --source-map dist/low.css.map",
        "build:json": "sass --no-source-map --load-path=./ json.scss dist/low.raw.json",
        "postbuild:json": "cat dist/low.raw.json | tail -n 2 | head -n 1 | node ./scripts/json.js > dist/low.json && rm dist/low.raw.json",
        "build": "yarn build:css && yarn build:json",
        "prebuild": "node scripts/version.js > low/_version.scss",
        "docs": "babel-node --presets '@babel/preset-react' scripts/mdx.js",
        "predocs": "rm -rf public && mkdir public",
        "postdocs": "cp dist/low.css public/ && cp dist/low.css.map public/",
        "serve": "stattic --folder public --port 5000"
    },
    "keywords": [
        "css",
        "css-toolkit",
        "low-css",
        "functional-css",
        "css-utilities",
        "utilities",
        "css-classes"
    ],
    "files": [
        "README.md",
        "LICENSE",
        "dist",
        "low",
        "scripts",
        "main.scss",
        "json.scss"
    ],
    "devDependencies": {
        "@babel/core": "^7.21.4",
        "@babel/node": "^7.20.7",
        "@babel/preset-react": "^7.18.6",
        "@mdx-js/mdx": "^2.3.0",
        "@mochicons/node": "^0.0.1",
        "autoprefixer": "^10.4.12",
        "csso-cli": "^4.0.1",
        "gray-matter": "^4.0.3",
        "postcss": "^8.4.18",
        "postcss-cli": "^10.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "sass": "^1.55.0"
    },
    "peerDependencies": {
        "sass": ">=1.23.0"
    },
    "browserslist": [
        "last 10 Chrome versions",
        "last 4 Firefox versions",
        "last 3 Safari versions",
        "not Safari 12",
        "last 4 Edge versions",
        "not Edge <= 18",
        "Firefox ESR"
    ]
}
